<h1>Ingresar</h1>

<%= form_tag sessions_path do %>
	<table>
	<tr>
		<td><%= label_tag :nombre %></td>
		<td><%= text_field_tag :nombre, params[:nombre] %></td>
	</tr>
	<tr>
		<td><%= label_tag :password %></td>
		<td><%= password_field_tag :password %></td>
	</tr>	
	<tr>
		<td colspan="2"><%= submit_tag "Abrete Sesamo" %></td>
	</tr>
</table>
	<% end %>
